<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="executionGrid" hgap="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="desktop.execution.ExecutionController">
  <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="20.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="NEVER" minWidth="20.0" prefWidth="20.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="NEVER" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="20.0" prefHeight="20.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <Button fx:id="startBTN" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#startButtonActionListener" prefHeight="25.0" prefWidth="49.0" text="Start!" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TableView fx:id="entityPopulationTable" editable="true" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
        <columns>
          <TableColumn fx:id="entityCol" prefWidth="75.0" text="Entity" />
          <TableColumn fx:id="populationCol" prefWidth="75.0" text="Population" />
        </columns>
      </TableView>
      <Button fx:id="clearBTN" mnemonicParsing="false" onAction="#clrButtonActionListener" text="Clear" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ListView fx:id="envListView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="2" />
      <HBox fx:id="currentEnvVarDetailsHBox" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
   </children>
</GridPane>
